{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["prisma/**/*.ts"],
  "exclude": ["node_modules"]
}
